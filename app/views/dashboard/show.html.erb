<% content_for :title, "Dashboard" %>

<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-info"><%= flash[:notice] %></div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <!-- User Info Section -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Your Profile</h5>
          <% if @current_user %>
            <p>Email: <%= @current_user.email_address %></p>
            <p>Member since: <%= @current_user.created_at.strftime("%B %d, %Y") %></p>
            <p>Total posts: <%= @current_user.posts.count %></p>
          <% end %>
          <%= link_to "Create New Post", new_post_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <!-- User's Posts Section -->
      <h2>Your Recent Posts</h2>
      
      <% if @current_user&.posts&.any? %>
        <div id="user-posts">
          <% @current_user.posts.order(created_at: :desc).limit(5).each do |post| %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= truncate(post.content, length: 150) %></p>
                <div class="btn-group">
                  <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                  <%= button_to "Delete", post_path(post), method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      form: { data: { turbo_confirm: "Are you sure?" } } %>
                </div>
              </div>
              <div class="card-footer text-muted">
                Posted: <%= time_ago_in_words(post.created_at) %> ago
              </div>
            </div>
          <% end %>
        </div>
        
        <%= link_to "View All Posts", posts_path, class: "btn btn-secondary" %>
      <% else %>
        <div class="alert alert-info">
          You haven't created any posts yet. 
          <%= link_to "Create your first post!", new_post_path %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <%= button_to "Log Out", logout_path, method: :delete, class: "btn btn-danger" %>
  </div>
</div>