<h4 class="mb-3">Edit your comment</h4>

<%= form_with model: [@post, @comment], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :content, "Your comment", class: "form-label fw-bold" %>
    <%= form.text_area :content, class: "form-control", rows: 4, maxlength: 1000 %>
  </div>
  <div class="d-flex gap-2">
    <%= form.submit "Update Comment", class: "btn btn-primary" %>
    <%= link_to "Cancel", post_path(@post), class: "btn btn-secondary" %>
  </div>
<% end %>
